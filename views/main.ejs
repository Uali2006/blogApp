<%- include("partials/header.ejs") %>
<div class = "container text-center">
        <div class="row">
            <form action="/submit" method = "POST" class="form">
                <textarea name="blog_text" id="blog_text" rows = "10" cols = "50" class = "text_area"></textarea>
                <input type = "submit" value = "Post the Blog" class = "button submit">
            </form>
        </div>
        <div class="row">
            <% if(blogsArr.length > 0){ %>
                <ul class="blog-list">
                    <% for(let i = 0; i < blogsArr.length; i++){ %>
                        <li class="blog">
                            <div class="blog-text"><%= blogsArr[i] %></div>
                            <form action="/edit" method="GET">
                                <input type = "hidden" name = "index" value = <%= i %>>
                                <button type="submit" class="button edit">Edit</button>
                            </form>
                            <form action="/delete" method="POST">
                                <input type = "hidden" name = "index" value = <%= i %>>
                                <button type="submit" class="button delete">Delete</button>
                            </form>
                        </li>
                    <% } %>
                </ul>
            <% } else {%>
                <h2>No Blogs to display...<span class = "text-body-secondary"> Please submit one to start</span></h2>
            <% } %>
        </div>
</div>
<%- include("partials/footer.ejs")  %>
